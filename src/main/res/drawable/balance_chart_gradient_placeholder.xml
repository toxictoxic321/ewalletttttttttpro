<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A1A1A" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:top="50dp" android:bottom="50dp" android:left="30dp" android:right="30dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6A5ACD"
                android:endColor="#8A63D2"
                android:angle="0" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:top="20dp" android:bottom="230dp" android:left="50dp" android:right="50dp">
        <shape android:shape="rectangle">
            <solid android:color="#8A63D2" />
            <size android:height="3dp"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
</layer-list>